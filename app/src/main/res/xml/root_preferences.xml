<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:key="@string/auto_update_key"
            app:summaryOff="@string/auto_update_off"
            app:summaryOn="@string/auto_update_on"
            app:title="@string/auto_update_title" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/auto_send_key"
            app:summaryOff="@string/auto_send_off"
            app:summaryOn="@string/auto_send_on"
            app:title="@string/auto_send_title" />

    </PreferenceCategory>

</PreferenceScreen>